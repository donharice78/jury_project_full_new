<form method="post" action="{{ path('app_admin_user_delete', {'id': user.id}) }}" onsubmit="return confirm
('Are you sure you want to delete this {{user.lastName ~ ' ' ~ user.firstName}}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger btn-lg">Delete User</button>
</form>

