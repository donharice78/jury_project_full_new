{% extends 'base.html.twig' %}

{% block title %}Cours
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset ('../assets/styles/styles.css') }}">
	<link rel="stylesheet" href="{{ asset ('../assets/styles/courses.css') }}">
{% endblock %}

{% block body %}
	<body>

		<!-- Section d'en-tête -->
		<section class="courses-header">
			<nav>
				<!-- Logo cliquable qui redirige vers la page d'accueil -->
				<a href="{{ path('app_home') }}">
					<img src="{{ asset('../assets/img/Web Dev-logo.png') }}" alt="Logo">
				</a>
				<div
					class="nav-links" id="navLinks">
					<!-- Icône pour fermer le menu -->
					<i class="bi bi-x" onclick="hideMenu()"></i>
					<ul>
						<!-- Liens de navigation -->
						<li>
							<a href="{{ path('app_home') }}">ACCUEIL</a>
						</li>
						<li>
							<a href="{{ path('app_apropos') }}">À PROPOS</a>
						</li>
						<li>
							<a href="{{ path('app_course_index') }}">COURS</a>
						</li>
						<li>
							<a href="{{ path('app_blogs_index') }}">BLOG</a>
						</li>
						<li>
							<a href="{{ path('app_contact') }}">CONTACT</a>
						</li>
						<li>
							<!-- Liens de connexion/déconnexion -->
							<div aria-labelledby="">
								{% if app.user %}
									<a href="{{ path('app_logout') }}">DÉCONNEXION</a>
								{% else %}
									<a href="{{ path('app_login') }}">ESPACE</a>
								{% endif %}
							</div>
						</li>
					</ul>
				</div>
				<!-- Icône pour ouvrir le menu -->
				<i class="bi bi-list" onclick="showMenu()"></i>
			</nav>
		</section>

		<!-- Section du contenu principal -->
		<div class="container mt-5">
			<h1 class="text-center mb-5">Détails du Cours</h1>

			<!-- Composant de carte pour afficher les détails du cours -->
			<div
				class="card mb-4">
				<!-- Image du cours -->
				<img src="{{ course.image }}" class="card-img-top" alt="Image du Cours" style="height: 200px; object-fit: cover;">
				<div
					class="card-body">
					<!-- Titre du cours -->
					<h5 class="card-title fw-bold text-center">{{ course.title }}</h5>
					<!-- Description du cours -->
					<p class="card-text">
						<strong class="fw-bold">Description :</strong>
						{{ course.description }}</p>
					<!-- Durée du cours -->
					<p class="card-text">
						<strong class="fw-bold">Durée :</strong>
						{{ course.duration }}
						Mois</p>
					<!-- Date de début du cours -->
					<p class="card-text">
						<strong class="fw-bold">Date de Début :</strong>
						{{ course.startDate ? course.startDate|date('Y-m-d') : 'N/A' }}</p>
					<!-- Format du cours -->
					<p class="card-text">
						<strong class="fw-bold">Format du Cours :</strong>
						{{ course.courseFormat }}</p>
					<!-- Prérequis du cours -->
					<p class="card-text">
						<strong class="fw-bold">Prérequis :</strong>
						{{ course.prerequisities }}</p>
					<!-- Frais du cours -->
					<p class="card-text">
						<strong class="fw-bold">Frais du Cours :</strong>
						{{ course.courseFee }}</p>
				</div>
				<div
					class="card-footer text-center">
					<!-- Boutons d'action -->
					<a href="{{ path('app_course_index') }}" class="btn btn-secondary">Retour à la Liste</a>
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('app_course_edit', {'id': course.id}) }}" class="btn btn-primary">Modifier</a>
						{{ include('course/_delete_form.html.twig') }}
					{% endif %}
				</div>
			</div>
		</div>

		<!-- Footer -->
		<footer class="footer">
			<div class="footer-container">
				<div
					class="footer-row">
					<!-- Colonnes du pied de page avec informations et liens -->
					<div class="footer-col">
						<h4>WeB DeV</h4>
						<ul>
							<li><a href="{{path('app_home')}}">Home</a></li>
							<li><a href="{{path('app_blogs_index')}}">Notre Blog</a></li>
							<li><a href="{{path('app_contact')}}">Contactez-nous</a></li>
							<li><a href="{{path('app_apropos')}}">À propos de nous</a></li>
							<li><a href="{{path('app_privacy')}}">Politique de confidentialité</a></li>
						</ul>
					</div>
					<div class="footer-col">
						<h4>Obtenir de l'aide</h4>
						<ul>
							<li><a href="{{path('app_faq')}}">FAQ</a></li>
							<li><a href="{{path('app_certification')}}">Certification</a></li>
							<li><a href="{{path('app_financements')}}">Financements</a></li>
							<li><a href="{{path('app_evenements')}}">Événements</a></li>
							<li><a href="{{path('app_modaliteacces')}}">Modalités d'accès</a></li>
						</ul>
					</div>
					<div class="footer-col">
						<h4>Adresse</h4>
						<ul>
							<li><a href="">7 Avenue du General Patton</a></li>
							<li><a href="">77000</a></li>
							<li><a href="">Melun</a></li>
							<li><a href="">Tel: 07 83 65 08 80</a></li>
						</ul>
					</div>
					<div class="footer-col">
						<h4>Suivez-nous</h4>
						<div class="social-links">
							<a href="#">
								<i class="fab fa-facebook-f"></i>
							</a>
							<a href="#">
								<i class="fab fa-twitter"></i>
							</a>
							<a href="#">
								<i class="fab fa-instagram"></i>
							</a>
							<a href="#">
								<i class="fab fa-linkedin-in"></i>
							</a>
						</div>
					</div>


				</div>
			</div>
		</footer>

    </body>
	{% endblock %}

