{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block stylesheets %}
	{{ parent() }}
    <link rel="stylesheet" href="{{ asset ('../assets/styles/styles.css') }}">
	<link rel="stylesheet" href="{{ asset ('../assets/styles/courses.css') }}">
{% endblock %}

{% block body %}
<body>

<section class="courses-header">
			<nav>
				<a href="{{ path('app_home') }}">
					<img src="{{ asset('../assets/img/Web Dev-logo.png') }}" alt="Logo">
				</a>
				<div class="nav-links" id="navLinks">
					<i class="bi bi-x" onclick="hideMenu()"></i>
					<ul>
						<li>
							<a href="{{ path('app_home') }}">HOME</a>
						</li>
						<li>
							<a href="{{ path('app_apropos') }}">ABOUT</a>
						</li>
						<li>
							<a href="{{ path('app_course_index') }}">COURSE</a>
						</li>
						<li>
							<a href="{{ path('app_blogs_index') }}">BLOG</a>
						</li>
						<li>
							<a href="{{ path('app_contact') }}">CONTACT</a>
						</li>

						<li class="">

							<div class="" aria-labelledby="">
								{% if app.user %}
									<a class="" href="{{ path('app_logout') }}">LOGOUT</a>
								{% else %}
									<a class="" href="{{ path('app_login') }}">ESPACE</a>
								{% endif %}
							</div>
						</li>
					</ul>
				</div>
				<i class="bi bi-list" onclick="showMenu()"></i>
			</nav>

       
    </section>

    <div class="container mt-5">
        <h1 class="text-center mb-5">Course Details</h1>

        <!-- Card Component -->
        <div class="card mb-4">
            <img src="{{ course.image }}" class="card-img-top " alt="Course Image" style="height: 200px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title fw-bold text-center">{{ course.title }}</h5>
                <p class="card-text "><strong class="fw-bold">Description:</strong> {{ course.description }}</p>
                <p class="card-text"><strong class="fw-bold">Duration:</strong class="fw-bold"> {{ course.duration }}</p>
                <p class="card-text"><strong class="fw-bold">Start Date:</strong> {{ course.startDate ? course.startDate|date('Y-m-d') : 'N/A' }}</p>
                <p class="card-text"><strong class="fw-bold">Course Format:</strong> {{ course.courseFormat }}</p>
                <p class="card-text"><strong class="fw-bold">Prerequisites:</strong> {{ course.prerequisities }}</p>
                <p class="card-text"><strong class="fw-bold">Course Fee:</strong> {{ course.courseFee }}</p>
            </div>
            <div class="card-footer text-center">
                <!-- Action Buttons -->
                <a href="{{ path('app_course_index') }}" class="btn btn-secondary">Back to List</a>
				{% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_course_edit', {'id': course.id}) }}" class="btn btn-primary">Edit</a>
                {{ include('course/_delete_form.html.twig') }}
				{% endif %}
            </div>
        </div>
    </div>

		<!-- ------------------------------------footer-- -->

		<footer class="footer">
			<div class="footer-container">
				<div class="footer-row">

					<div class="footer-col">
						<h4>Obtenir de l'aide</h4>
						<ul>
							<li><a href="{{ path('app_faq') }}">FAQ</a></li>
							<li><a href="{{path('app_certification') }}">Certification</a></li>
							<li><a href="{{ path('app_financements') }}">Financements</a></li>
							<li><a href="{{ path('app_evenements') }}">Evenements</a></li>
							<li><a href="{{ path('app_modaliteacces') }}">Modalités d'accès</a></li>

						</ul>
					</div>
					<div class="footer-col">
						<h4>DeV WeB</h4>
						<ul>
						    <li><a href="{{ path('app_home') }}">Home</a></li>
							<li><a href="{{ path('app_blogs_index') }}">Notre Blog</a></li>
							<li><a href="{{ path('app_contact') }}">Contactez-nous</a></li>
							<li><a href="{{ path('app_apropos') }}">À propos de nous</a></li>
							<li><a href="{{ path('app_privacy') }}">politique de confidentialité</a></li>

						</ul>
					</div>

					<div class="footer-col">
						<h4>Adresse</h4>
						<ul>
							<li><a href="">7 Avenue du General Patton</a></li>
							<li><a href="">77000</a></li>
							<li><a href="">Melun</a></li>
							<li><a href="">Tel: 07 83 65 08 80</a></li>
						</ul>
					</div>
					<div class="footer-col">
						<h4>Suivez-nous</h4>
						<div class="social-links">
							<a href="#">
								<i class="fab fa-facebook-f"></i>
							</a>
							<a href="#">
								<i class="fab fa-twitter"></i>
							</a>
							<a href="#">
								<i class="fab fa-instagram"></i>
							</a>
							<a href="#">
								<i class="fab fa-linkedin-in"></i>
							</a>
						</div>
					</div>
				</div>
			</div>
		</footer>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
{% endblock %}
