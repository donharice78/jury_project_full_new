{% extends 'base.html.twig' %}

{% block title %}Course Index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('../assets/styles/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('../assets/styles/courses.css') }}">
{% endblock %}

{% block body %}
    <!-- Header Section -->
    <section class="courses-header">
			<nav>
				<a href="{{ path('app_home') }}">
					<img src="{{ asset('../assets/img/Web Dev-logo.png') }}" alt="Logo">
				</a>
				<div class="nav-links" id="navLinks">
					<i class="bi bi-x" onclick="hideMenu()"></i>
					<ul>
						<li>
							<a href="{{ path('app_home') }}">HOME</a>
						</li>
						<li>
							<a href="{{ path('app_apropos') }}">ABOUT</a>
						</li>
						<li>
							<a href="{{ path('app_course_index') }}">COURSE</a>
						</li>
						<li>
							<a href="{{ path('app_blogs_index') }}">BLOG</a>
						</li>
						<li>
							<a href="{{ path('app_contact') }}">CONTACT</a>
						</li>

						<li class="">

							<div class="" aria-labelledby="">
								{% if app.user %}
									<a class="" href="{{ path('app_logout') }}">LOGOUT</a>
								{% else %}
									<a class="" href="{{ path('app_login') }}">ESPACE</a>
								{% endif %}
							</div>
						</li>
					</ul>
				</div>
				<i class="bi bi-list" onclick="showMenu()"></i>
			</nav>
    </section>

    <!-- Main Content Section -->
    <div class="container mt-5">
        <h1 class="text-center mb-4">Course Index</h1>

        <!-- Course Cards -->
        <div class="row">
            {% for course in courses %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <!-- Course Image -->
                        <img
                            src="{{ course.image }}"
                            class="card-img-top"
                            alt="{{ course.title }}"
                            style="height: 200px; object-fit: cover;"
                        />
                        <div class="card-body">
                            <!-- Course Title -->
                            <h5 class="card-title">
                                {{ course.title|slice(0, 30) ~ (course.title|length > 30 ? '...' : '') }}
                            </h5>
                            <!-- Course Description -->
                            <p class="card-text">
                                {{ course.description|slice(0, 90) ~ (course.description|length > 90 ? '...' : '') }}
                            </p>
                            <!-- Course Details -->
                            <ul class="list-unstyled">
                                <li><strong>Duration:</strong> {{ course.duration }}</li>
                                <li><strong>Start Date:</strong> {{ course.startDate ? course.startDate|date('Y-m-d') : 'N/A' }}</li>
                                <li><strong>Format:</strong> {{ course.courseFormat }}</li>
                                <li><strong>Prerequisites:</strong> {{ course.prerequisities }}</li>
                                <li><strong>Fee:</strong> {{ course.courseFee }}</li>
                            </ul>
                            <!-- Action Buttons -->
                            <a href="{{ path('app_course_show', {'id': course.id}) }}" class="btn btn-primary">Show</a>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_course_edit', {'id': course.id}) }}" class="btn btn-secondary">Edit</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <!-- No Courses Found Message -->
                <div class="col-12">
                    <div class="alert alert-info">No records found</div>
                </div>
            {% endfor %}
        </div>

        <!-- Create New Course Button -->
        <div class="text-center m-4">
                <a href="{{ path('app_course_new') }}" class="btn btn-success mt-4 ">Create New</a>

        </div>
    </div>

		<!-- ------------------------------------footer-- -->

		<footer class="footer">
			<div class="footer-container">
				<div class="footer-row">

					<div class="footer-col">
						<h4>Obtenir de l'aide</h4>
