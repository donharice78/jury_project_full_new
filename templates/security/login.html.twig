{% extends 'base.html.twig' %}

{% block title %}Log In{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset ('../assets/styles/styles.css') }}">
	<link rel="stylesheet" href="{{ asset ('../assets/styles/courses.css') }}">

{% endblock %}

{% block body %}
<body>
       <section class="courses-header">
			<nav>
				<a href="{{ path('app_home') }}">
					<img src="{{ asset('../assets/img/Web Dev-logo.png') }}" alt="Logo">
				</a>
				<div class="nav-links" id="navLinks">
					<i class="bi bi-x" onclick="hideMenu()"></i>
					<ul>
						<li>
							<a href="{{ path('app_home') }}">HOME</a>
						</li>
						<li>
							<a href="{{ path('app_apropos') }}">ABOUT</a>
						</li>
						<li>
							<a href="{{ path('app_course_index') }}">COURSE</a>
						</li>
						<li>
							<a href="{{ path('app_blogs_index') }}">BLOG</a>
						</li>
						<li>
							<a href="{{ path('app_contact') }}">CONTACT</a>
						</li>

						<li class="">

							<div class="" aria-labelledby="">
								{% if app.user %}
									<a class="" href="{{ path('app_logout') }}">LOGOUT</a>
								{% else %}
									<a class="" href="{{ path('app_login') }}">ESPACE</a>
								{% endif %}
							</div>
						</li>
					</ul>
				</div>
				<i class="bi bi-list" onclick="showMenu()"></i>
			</nav>

       
    </section>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="row w-100">
            <div class="col-md-4 mx-auto">
                <div class="text-center mb-4">
                    <h1 class="h3 mb-3 font-weight-normal">Log In</h1>
                </div>

                <form action="{{ path('app_login') }}" method="post">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        <label for="username" class="form-label">Email</label>
                        <input type="email" value="{{ username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                    </div>

                    {# Uncomment if using remember me functionality #}
                    
                    <div class="form-check mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
                        <label for="_remember_me" class="form-check-label">Remember me</label>
                    </div>
                    

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-primary btn-block" type="submit">Sign In</button>
                </form>

                <div class="text-center mt-4">
                    <p><a href="#" class="btn btn-link">Forgot your password?</a></p>
                    <p>Don't have an account? <a href="{{ path('app_register') }}" class="btn btn-link">Sign up</a></p>
                    <p>Or log in with Facebook:</p>
                    
                </div>
            </div>
        </div>
    </div>

		<!-- ------------------------------------footer-- -->

		<footer class="footer">
			<div class="footer-container">
				<div class="footer-row">

					<div class="footer-col">
						<h4>Obtenir de l'aide</h4>
						<ul>
							<li><a href="{{ path('app_faq') }}">FAQ</a></li>
							<li><a href="{{path('app_certification') }}">Certification</a></li>
							<li><a href="{{ path('app_financements') }}">Financements</a></li>
							<li><a href="{{ path('app_evenements') }}">Evenements</a></li>
							<li><a href="{{ path('app_modaliteacces') }}">Modalités d'accès</a></li>

						</ul>
					</div>
					<div class="footer-col">
						<h4>DeV WeB</h4>
						<ul>
						    <li><a href="{{ path('app_home') }}">Home</a></li>
							<li><a href="{{ path('app_blogs_index') }}">Notre Blog</a></li>
							<li><a href="{{ path('app_contact') }}">Contactez-nous</a></li>
							<li><a href="{{ path('app_apropos') }}">À propos de nous</a></li>
							<li><a href="{{ path('app_privacy') }}">politique de confidentialité</a></li>

						</ul>
					</div>

					<div class="footer-col">
						<h4>Adresse</h4>
						<ul>
							<li><a href="">7 Avenue du General Patton</a></li>
							<li><a href="">77000</a></li>
							<li><a href="">Melun</a></li>
							<li><a href="">Tel: 07 83 65 08 80</a></li>
						</ul>
					</div>
					<div class="footer-col">
						<h4>Suivez-nous</h4>
						<div class="social-links">
							<a href="#">
								<i class="fab fa-facebook-f"></i>
							</a>
							<a href="#">
								<i class="fab fa-twitter"></i>
							</a>
							<a href="#">
								<i class="fab fa-instagram"></i>
							</a>
							<a href="#">
								<i class="fab fa-linkedin-in"></i>
							</a>
						</div>
					</div>
				</div>
			</div>
		</footer>
</body>

{% endblock %}
