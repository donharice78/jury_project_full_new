{% extends 'base.html.twig' %}

{% block title %}Certifications RNCP - Développement Web et Mobile
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset ('../assets/styles/styles.css') }}">
	<link rel="stylesheet" href="{{ asset ('../assets/styles/aboutUs.css') }}">
