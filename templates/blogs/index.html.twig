{% extends 'base.html.twig' %}

{% block title %}Info {% endblock %}

{% block stylesheets %}
	{{ parent() }}
    <link rel="stylesheet" href="{{ asset ('../assets/styles/styles.css') }}">
	<link rel="stylesheet" href="{{ asset ('../assets/styles/courses.css') }}">

{% endblock %}

{% block body %}

<body>  

<section class="courses-header">
			<nav>
				<a href="{{ path('app_home') }}">
					<img src="{{ asset('../assets/img/Web Dev-logo.png') }}" alt="Logo">
				</a>
				<div class="nav-links" id="navLinks">
					<i class="bi bi-x" onclick="hideMenu()"></i>
					<ul>
						<li>
							<a href="{{ path('app_home') }}">HOME</a>
						</li>
						<li>
							<a href="{{ path('app_apropos') }}">ABOUT</a>
						</li>
						<li>
							<a href="{{ path('app_course_index') }}">COURSE</a>
						</li>
						<li>
							<a href="{{ path('app_blogs_index') }}">BLOG</a>
						</li>
						<li>
							<a href="{{ path('app_contact') }}">CONTACT</a>
						</li>

						<li class="">

							<div class="" aria-labelledby="">
								{% if app.user %}
									<a class="" href="{{ path('app_logout') }}">LOGOUT</a>
								{% else %}
									<a class="" href="{{ path('app_login') }}">ESPACE</a>
								{% endif %}
							</div>
						</li>
					</ul>
				</div>
				<i class="bi bi-list" onclick="showMenu()"></i>
			</nav>

       
    </section>

    <div class="container mt-4">
        <h1 class="text-center mb-4">Info</h1>

<div class="row">
   

    {% for blog in blogs %}
        <div class="col-md-4 mb-4">
            <div class="card">
                {% if blog.images|length > 0 %}
                    <img src="{{ asset('uploads/' ~ blog.images[0].name) }}" class="card-img-top" alt="Blog Image" style="height: 200px; object-fit: auto;">
                {% else %}
                    <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 200px; background-color: #f8f9fa;">
                        <span>No image</span>
                    </div>
                {% endif %}
                <div class="card-body justify-items-center d-flex flex-column text-center">
                    <h5 class="card-title justify-content-center">{{ blog.title|slice(0, 30) }}</h5>
                    <p class="card-text">{{ blog.content|slice(0, 90) ~ (blog.content|length > 90 ? '...' : '') }}</p>
                    <p class="card-text"><small class="text-muted">Created at: {{ blog.createdAt|date('Y-m-d H:i') }}</small></p>
                    <a href="{{ path('app_blogs_show', {'id': blog.id}) }}" class="btn btn-info btn-sm">Show</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_blogs_edit', {'id': blog.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    {% endif %}
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                No records found.
            </div>
        </div>
    {% endfor %}
</div>


        {% if is_granted('ROLE_ADMIN') %}
        <div class="d-flex justify-content-center mb-4">
            <a href="{{ path('app_blogs_new') }}" class="btn btn-success">Create New Blog</a>
        </div>
    {% endif %}
    </div>

		<!-- ------------------------------------footer-- -->

		<footer class="footer">
			<div class="footer-container">
				<div class="footer-row">

					<div class="footer-col">
						<h4>Obtenir de l'aide</h4>
						<ul>
							<li><a href="{{ path('app_faq') }}">FAQ</a></li>
							<li><a href="{{path('app_certification') }}">Certification</a></li>
							<li><a href="{{ path('app_financements') }}">Financements</a></li>
							<li><a href="{{ path('app_evenements') }}">Evenements</a></li>
							<li><a href="{{ path('app_modaliteacces') }}">Modalités d'accès</a></li>

						</ul>
					</div>
					<div class="footer-col">
						<h4>DeV WeB</h4>
						<ul>
						    <li><a href="{{ path('app_home') }}">Home</a></li>
							<li><a href="{{ path('app_blogs_index') }}">Notre Blog</a></li>
							<li><a href="{{ path('app_contact') }}">Contactez-nous</a></li>
							<li><a href="{{ path('app_apropos') }}">À propos de nous</a></li>
							<li><a href="{{ path('app_privacy') }}">politique de confidentialité</a></li>

						</ul>
					</div>

					<div class="footer-col">
						<h4>Adresse</h4>
						<ul>
							<li><a href="">7 Avenue du General Patton</a></li>
							<li><a href="">77000</a></li>
							<li><a href="">Melun</a></li>
							<li><a href="">Tel: 07 83 65 08 80</a></li>
						</ul>
					</div>
					<div class="footer-col">
						<h4>Suivez-nous</h4>
						<div class="social-links">
							<a href="#">
								<i class="fab fa-facebook-f"></i>
							</a>
							<a href="#">
								<i class="fab fa-twitter"></i>
							</a>
							<a href="#">
								<i class="fab fa-instagram"></i>
							</a>
							<a href="#">
