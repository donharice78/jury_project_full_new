{% extends 'base.html.twig' %}


{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset ('../assets/styles/styles.css') }}">
	<link rel="stylesheet" href="{{ asset ('../assets/styles/courses.css') }}">

{% endblock %}

{% block title %}Register
{% endblock %}

{% block body %}
	<body>

        <section class="courses-header">
			<nav>
				<a href="{{ path('app_home') }}">
					<img src="{{ asset('../assets/img/Web Dev-logo.png') }}" alt="Logo">
				</a>
				<div class="nav-links" id="navLinks">
					<i class="bi bi-x" onclick="hideMenu()"></i>
					<ul>
						<li>
							<a href="{{ path('app_home') }}">HOME</a>
						</li>
						<li>
							<a href="{{ path('app_apropos') }}">ABOUT</a>
						</li>
						<li>
							<a href="{{ path('app_course_index') }}">COURSE</a>
						</li>
						<li>
							<a href="{{ path('app_blogs_index') }}">BLOG</a>
						</li>
						<li>
							<a href="{{ path('app_contact') }}">CONTACT</a>
						</li>

						<li class="">

							<div class="" aria-labelledby="">
								{% if app.user %}
									<a class="" href="{{ path('app_logout') }}">LOGOUT</a>
								{% else %}
									<a class="" href="{{ path('app_login') }}">ESPACE</a>
								{% endif %}
							</div>
						</li>
					</ul>
				</div>
				<i class="bi bi-list" onclick="showMenu()"></i>
			</nav>
       
    </section>



		<div class="container mt-5">
			<h1 class="mb-4 text-center">Register</h1>

			{{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

			<!-- Place Username, First Name, and Last Name fields here -->
			<div class="mb-3">
				{{ form_label(registrationForm.username, null, {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(registrationForm.username) }}
			</div>

			<div class="mb-3">
				{{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(registrationForm.email) }}
			</div>


			<div class="mb-3">
				{{ form_label(registrationForm.password.first, null, {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(registrationForm.password.first) }}
			</div>

			<div class="mb-3">
				{{ form_label(registrationForm.password.second, null, {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(registrationForm.password.second) }}
			</div>

			<div class="mb-3">
				{{ form_label(registrationForm.firstName, null, {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(registrationForm.firstName) }}
			</div>

			<div class="mb-3">
				{{ form_label(registrationForm.lastName, null, {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(registrationForm.lastName) }}
			</div>

			<div class="mb-3">
				{{ form_label(registrationForm.phone, null, {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(registrationForm.phone) }}
			</div>

			<div class="mb-3">
				{{ form_label(registrationForm.photo, null, {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(registrationForm.photo, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(registrationForm.photo) }}
			</div>




			<div class="mb-3 form-check">
				{{ form_widget(registrationForm.terms, {'attr': {'class': 'form-check-input'}}) }}
				{{ form_label(registrationForm.terms, null, {'label_attr': {'class': 'form-check-label'}}) }}
				{{ form_errors(registrationForm.terms) }}
			</div>

			<!-- Register button at the end -->
			<button type="submit" class="btn btn-primary mb-3 align-center">Register</button>

			{{ form_end(registrationForm) }}
		</div>

		<!-- ------------------------------------footer-- -->

		<footer class="footer">
			<div class="footer-container">
				<div class="footer-row">

					<div class="footer-col">
						<h4>Obtenir de l'aide</h4>
